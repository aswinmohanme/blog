      <.link patch={~p"/"}>
        <p class={[
          "text-primary-500 block shrink-0 border px-2 py-1 text-sm hover:text-primary-900 hover:bg-yellow-50 hover:border-yellow-300",
          is_nil(@selected_tag) && "!text-primary-900 border-yellow-300 bg-yellow-100"
        ]}>
