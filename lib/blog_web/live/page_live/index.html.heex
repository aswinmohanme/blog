          </.link>
          <p class="text-primary-600 mt-2">
            <span class="bg-primary-50 border-primary-200 mr-2 border py-0.5 pr-0 pl-2 text-sm">
              <%= format_published_date(post.date) %>
            </span>
            <%= post.description %>
          </p>
        </div>
      <% end %>
    </div>
  </section>
</div>

