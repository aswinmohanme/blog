        <div class="">
          <.link navigate={~p"/#{post.id}"}>
            <h3 class="font-medium">
              <span :if={post.rating > 0} class="mr-1 text-yellow-600">
                <%= String.duplicate("&", post.rating) %>
              </span>
              <%= post.title %>
            </h3>
          </.link>
          <p class="text-primary-600 mt-2">
            <%= post.description %>
          </p>
        </div>
      <% end %>
    </div>
  </section>

  <section class="mt-20">
    <h2 class="font-medium">All Posts</h2>
