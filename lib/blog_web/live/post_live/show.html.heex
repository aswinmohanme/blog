<article class="md:pt-8" phx-hook="PrependHashesToHeadings" id="article-show">
  <div class="flex flex-col items-start space-y-2">
    <div class="bg-primary-100 border-primary-200 border px-2 py-0.5 text-sm">
      <%= format_published_date(@post.date) %>
    </div>
    <h1><%= @post.title %></h1>
  </div>
  <%= raw(@post.body) %>
</article>
